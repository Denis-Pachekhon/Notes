
@if (ListOfNotes is null)
{
    <div class="row">
        <div class="col">
            Add note
        </div>
    </div>
}
else if (ListOfNotes.Count == 0)
{
    <div class="row">
        <div class="col">
            Add note
        </div>
    </div>
}
else
{
    @foreach (var note in ListOfNotes)
    {
        if (IsCreated)
        {
            <IndividualNote Note="note" EditNoteCallback="EditNoteCallback" 
                            IsCreated="IsCreated" ChangeIsCreatedCallback ="ChangeIsCreatedCallback"/>

            break;
        }
        else
        {
            <IndividualNote Note="note" EditNoteCallback="EditNoteCallback" IsCreated="IsCreated" />
        }
    }
}

@code {

    [Parameter] public bool IsCreated { get; set; }
    [Parameter] public List<Note> ListOfNotes { get; set; }
    [Parameter] public EventCallback<Note> EditNoteCallback { get; set; }
    [Parameter] public EventCallback<bool> ChangeIsCreatedCallback { get; set; }
}
